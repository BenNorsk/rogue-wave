<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon sticky-top align-items-center rw-bg-dark">
  <%= link_to "Rogue Wave", root_path, class: "rw-title-text rw-title"%>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse justify-space-between pt-0" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
      <% if user_signed_in?  %>
        <li class="nav-item">
          <%= link_to "My Bookings", user_bookings_path(current_user), class: "rw-navbar-button rw-text-color-light rw-navbar-links" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Boats", user_boat_path(current_user), class: "rw-navbar-button rw-text-color-light rw-navbar-links" %>
        </li>
        <li class="nav-item">
          <%= link_to "Edit Profile", edit_user_registration_path, method: :get, class: "rw-text-color-light rw-navbar-links px-2" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "rw-text-color-light rw-navbar-links" %>
        </li>
        <% else %>
       <li class="nav-item rw-light-text">
          <%= link_to "Sign up", new_user_registration_path, class: "rw-text-color-light rw-navbar-links" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign in", new_user_session_path, class: "rw-navbar-button rw-text-color-light rw-navbar-links" %>
        </li>
        <% end %>
    </ul>
  </div>
</div>
