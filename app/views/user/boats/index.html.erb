<%= render "shared/title_wave", element: "#{@user.first_name}'s Boats" %>

<div class="boats-container rw-background-all">
  <div class="row">
    <div class="col-6 py-0 all-boats">
      <div class="user-boat-list">
        <% @user.boats.each do |boat| %>
          <% select = boat == @selected_boat ? "selected-card" : ""  %>
          <div class="user-boat-card position-relative <%= select %>">
            <%= render 'user_boat_card', boat: boat %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>


