<!-- Card contents -->
<%= link_to "", "#{user_boats_path}/?boat_id=#{boat.id}", class: "stretched-link" %>
<div class="d-flex justify-content-between">
  <h3 class="pr-4"><%= boat.name %></h3>
  <h3>$<%= boat.price_per_day.round() %><span class="h6"> / day </span></h3>
</div>
<div class="d-flex justify-content-between align-content-end">
  <div class="card-description-bl">
    <p class="mb-2"><%= boat.description %></p>
  </div>
  <div class="card-options">
    <%= link_to [:user, boat] do %>
    <i class="far fa-edit"></i>
    <% end %>
    <%= link_to [:user, boat], method: :delete, data: {confirm: "Are you sure?"} do %>
    <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</div>
