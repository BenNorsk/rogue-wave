<%= render "shared/title_wave", element: "Search Results" %>
<div class="my-container">
  <div class="my-container">
  <div class="row mt-5">
    <%= simple_form_for("", method: :get, url: boats_path) do |f| %>
    <%= f.input :query, label: false, :input_html => { :class => 'search-form-index' }, placeholder: 'Search..' %>
    <%= f.submit :style => "display: none;" %>
    <% end %>
  </div>
  <div class="row mt-5">
    <div class="col-12 col-lg-6 order-2 order-lg-1">
      <!-- map and filters here      -->
      <div class="map-div">
        <%= render 'shared/map' %>
      </div>
    </div>
    <div class="col-12 col-lg-6 order-1 order-lg-2">
        <!-- for each boat       -->
        <% @boats.each do |boat|  %>

        <div class="col-12">
          <%= link_to "", boat_path(boat), class: "stretched-link" %>
          <!-- boat card here      -->
          <%= render "shared/card_boat", element: boat %>

        </div>
        <% end  %>
    </div>
  </div>
</div>
</div>

